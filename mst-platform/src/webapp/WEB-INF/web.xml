<web-app id="WebApp_9" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:spring-mst.xml</param-value>
  </context-param>

  <filter>
    <filter-name>mst-filter</filter-name>
    <filter-class>xc.mst.servlet.MSTServletFilter</filter-class>
  </filter>

  <filter>
    <filter-name>struts2</filter-name>
    <filter-class>org.apache.struts2.dispatcher.FilterDispatcher</filter-class>
  </filter>

  <filter>
    <filter-name>SolrRequestFilter</filter-name>
    <filter-class>org.apache.solr.servlet.SolrDispatchFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>mst-filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>struts2</filter-name>
    <url-pattern>/st/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>struts2</filter-name>
    <url-pattern>/pub/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>SolrRequestFilter</filter-name>
    <url-pattern>/solr/*</url-pattern>
  </filter-mapping>

  <listener>
    <listener-class>xc.mst.servlet.MSTContextListener</listener-class>
  </listener>

  <servlet>
    <servlet-name>DevAdminServlet</servlet-name>
    <servlet-class>xc.mst.servlet.DevAdminServlet</servlet-class>
    <load-on-startup>3</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>SolrServer</servlet-name>
    <servlet-class>org.apache.solr.servlet.SolrServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>SolrUpdate</servlet-name>
    <servlet-class>org.apache.solr.servlet.SolrUpdateServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>Logging</servlet-name>
    <servlet-class>org.apache.solr.servlet.LogLevelSelection</servlet-class>
  </servlet>

  <!-- @Deprecated -->
  <servlet>
    <servlet-name>ping</servlet-name>
    <jsp-file>/solr/admin/ping.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>jsp</servlet-name>
    <servlet-class>org.apache.jasper.servlet.JspServlet</servlet-class>
    <init-param>
      <param-name>fork</param-name>
      <param-value>false</param-value>
    </init-param>
    <init-param>
      <param-name>xpoweredBy</param-name>
      <param-value>false</param-value>
    </init-param>
    <load-on-startup>3</load-on-startup>
    <!-- Nuevos parámetros -->
    <init-param>
      <param-name>production</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>checkInterval</param-name>
      <param-value>86400</param-value>
    </init-param>
    <init-param>
      <param-name>trimSpaces</param-name>
      <param-value>true</param-value>
    </init-param>
    <!-- Otros parámetros opcionales -->
    <!-- <init-param>
        <param-name>scratchDir</param-name>
        <param-value>/ruta/a/tu/carpeta/temporal</param-value>
    </init-param> -->
    <!-- <init-param>
        <param-name>mappedFile</param-name>
        <param-value>false</param-value>
    </init-param> -->
  </servlet>
  <servlet-mapping>
    <servlet-name>jsp</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>DevAdminServlet</servlet-name>
    <url-pattern>/devAdmin/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SolrServer</servlet-name>
    <url-pattern>/solr/select/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SolrUpdate</servlet-name>
    <url-pattern>/solr/update/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Logging</servlet-name>
    <url-pattern>/admin/logging</url-pattern>
  </servlet-mapping>

  <!-- @Deprecated -->
  <servlet-mapping>
    <servlet-name>ping</servlet-name>
    <url-pattern>/solr/admin/ping</url-pattern>
  </servlet-mapping>

  <!-- @Deprecated -->
  <servlet-mapping>
    <servlet-name>Logging</servlet-name>
    <url-pattern>/solr/admin/logging.jsp</url-pattern>
  </servlet-mapping>

  <mime-mapping>
    <extension>.xsl</extension>
    <!-- per http://www.w3.org/TR/2006/PR-xslt20-20061121/ -->
    <mime-type>application/xslt+xml</mime-type>
  </mime-mapping>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!--  UNCOMMENT both security constraints if using ssl -->

  <!--  oai should be a non secure url for OAIster
  <security-constraint>
    <web-resource-collection>
    <web-resource-name>MetadataServicesToolkit</web-resource-name>
      <url-pattern>/pub/*</url-pattern>
    </web-resource-collection>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
   -->

  <!-- Define a Security Constraint on this application for ssl
  <security-constraint>
    <web-resource-collection>
    <web-resource-name>MetadataServicesToolkit</web-resource-name>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
   -->

  <jsp-config>
    <taglib>
      <taglib-uri>mst-tags</taglib-uri>
      <taglib-location>/WEB-INF/classes/xc/mst/tags/mst-tags.tld</taglib-location>
    </taglib>
  </jsp-config>
</web-app>
